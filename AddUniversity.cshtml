@model WebApplication4.Models.UNIVERSITY

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Add University";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center" role="alert">
        @TempData["SuccessMessage"]
    </div>
}



<h2 class="text-center mb-5">Add University</h2>

@using (Html.BeginForm("AddUniversity", "Admin", FormMethod.Post))
{
    <div class="form-container">
        <!-- University Name -->
        <div class="form-group">
            <label class="form-label">University Name(Eg:The ICFAI University,Raipur)</label>
            @Html.TextBoxFor(model => model.UniversityNAME, new { @class = "form-control", placeholder = "Enter University Name", required = "required" })
        </div>

        <!-- Abbreviation -->
        <div class="form-group">
            <label class="form-label">Abbreviation(Eg:IUR)</label>
            @Html.TextBoxFor(model => model.Abbreviation, new { @class = "form-control", placeholder = "Enter Abbreviation", required = "required" })
        </div>

        <!-- Location -->
        <div class="form-group">
            @Html.LabelFor(model => model.Location, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Location, new { @class = "form-control", placeholder = "Enter Location", required = "required" })
        </div>

        <!-- Administrator Name -->
        <div class="form-group">
            <label class="form-label">Administrator Name</label>
            @Html.TextBoxFor(model => model.AdministratorName, new { @class = "form-control", placeholder = "Enter Administrator Name", required = "required" })
        </div>

        <!-- Contact -->
        <div class="form-group">
            @Html.LabelFor(model => model.Contact, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Contact, new { @class = "form-control", placeholder = "Enter Contact Number", required = "required" })
        </div>

        <!-- Email -->
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Enter Email Address", required = "required" })
        </div>

        <!-- Submit Button -->
        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary submit-btn">
                <i class="fas fa-save"></i> Add University
            </button>
        </div>
    </div>
}




<style>
    .form-container {
        max-width: 600px;
        margin: auto;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .form-label {
        font-weight: bold;
        color: #333;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ddd;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .submit-btn {
        background-color: #007bff;
        color: white;
        padding: 12px 20px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        border: none;
        transition: background-color 0.3s ease;
    }

        .submit-btn:hover {
            background-color: #0056b3;

        }
</style>