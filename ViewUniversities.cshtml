@model List<WebApplication4.Models.UNIVERSITY>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "View Universities";
}

<h2 class="text-center mb-4">@ViewBag.Title</h2>

<!-- ✅ Success Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}

<!-- ✅ Buttons to switch views -->
<div class="text-center mt-3">
    <a href="@Url.Action("ViewUniversities", "Admin")" class="btn btn-primary">View All Universities</a>
    <a href="@Url.Action("ViewActiveUniversities", "Admin")" class="btn btn-success">View Active Universities</a>
    <a href="@Url.Action("ViewDeactivatedUniversities", "Admin")" class="btn btn-danger">View Deactivated Universities</a>
</div>

<!-- ✅ Universities Table -->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>University Name</th>
            <th>Abbreviation</th>
            <th>Location</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var university in Model)
        {
            <tr>
                <td>@university.UniversityNAME</td>
                <td>@university.Abbreviation</td>
                <td>@university.Location</td>
                <td>
                    @if (university.IsActive == true)
                    {
                        <span class="badge badge-success">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Deactivated</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>



<!-- ✅ CSS Styling -->
<style>
    .table {
        width: 100%;
        background-color: #fff;
        border-radius: 5px;
        overflow: hidden;
    }

        .table th {
            text-align: center;
            background-color: #343a40;
            color: white;
            padding: 12px;
        }

        .table td {
            text-align: center;
            padding: 10px;
        }

    .alert-success {
        font-size: 16px;
        font-weight: bold;
        color: green;
        text-align: center;
    }

    .btn {
        margin: 5px;
    }
</style>
