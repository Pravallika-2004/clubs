@model List<WebApplication4.Models.UNIVERSITY>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Universities & Schools";
}

<h2 class="text-center mb-4">Universities & Schools</h2>

<!-- ✅ Buttons for Filtering -->
<div class="text-center mb-3">
    <a href="@Url.Action("ViewAllUniversitiesAndSchools", "Admin")" class="btn btn-primary">View All</a>
    <a href="@Url.Action("ViewActiveUniversitiesAndSchools", "Admin")" class="btn btn-success">View Active</a>
    <a href="@Url.Action("ViewDeactivatedUniversitiesAndSchools", "Admin")" class="btn btn-danger">View Deactivated</a>
</div>

<!-- ✅ Universities & Schools Table -->
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>University Name</th>
            <th>Abbreviation</th>
            <th>Location</th>
            <th>Status</th>
            <th>Departments (Schools)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var university in Model)
        {
            <tr>
                <td>@university.UniversityNAME</td>
                <td>@university.Abbreviation</td>
                <td>@university.Location</td>
                <td>
                    @if (university.IsActive == true)
                    {
                        <span class="badge badge-success">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Deactivated</span>
                    }
                </td>
                <td>
                    <ul>
                        @foreach (var department in university.DEPARTMENTs)
                        {
                            <li>
                                @department.DepartmentName - @department.HOD
                                @if (department.IsActive == false)
                                {
                                    <span class="badge badge-danger">Deactivated</span>
                                }
                            </li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- ✅ CSS Styling -->
<style>
    .table {
        width: 100%;
        background-color: #fff;
        border-radius: 5px;
        overflow: hidden;
    }

        .table th {
            text-align: center;
            background-color: #343a40;
            color: white;
            padding: 12px;
        }

        .table td {
            text-align: center;
            padding: 10px;
        }

    .btn {
        margin: 5px;
    }
</style>

